rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ðŸ”’ Partners (CAs)
    match /Partners/{userId} {
      // Allow user to see their own profile
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if false;
    }

    // ðŸ”’ Clients
    match /Clients/{clientId} {
      // Allow the list query ONLY if the user is logged in
      // Firestore will automatically enforce the .where() filter from your code
      allow list: if request.auth != null;

      // Allow getting a specific document only if they are the owner or the CA
      allow get: if request.auth != null && (
        request.auth.uid == clientId || 
        resource.data.referredBy == request.auth.uid
      );

      allow write: if false;
    }
  }
}